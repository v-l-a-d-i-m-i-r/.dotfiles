set $mid_light_color #9DA5B4
# set $light_color #9CA4B3
# set $light_color #FFFFFF
set $light_color     #CCCCCC


set $focused_workspace_brd  #262627
set $focused_workspace_bck  #262627
set $focused_workspace_txt  #CCCCCC

set $active_workspace_brd   #333333
set $active_workspace_bck   #5f676a
set $active_workspace_txt   #ffffff

set $inactive_workspace_brd #262627
set $inactive_workspace_bck #424446
set $inactive_workspace_txt #cccccc

set $urgent_workspace_brd   #2f343a
set $urgent_workspace_bck   #2F343F
set $urgent_workspace_txt   #FF970C

set $binding_mode_brd       #2f343a
set $binding_mode_bck       #900000
set $binding_mode_txt       #ffffff

set $bar_background #3c3e40

#set $client_background #ffffff

exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &\
  eval $(gnome-keyring-daemon -s --components=pkcs11,secrets,ssh,gpg)

exec_always --no-startup-id xbacklight -set 30
exec_always nitrogen --set-scaled ~/background.jpg
# exec_always --no-startup-id hsetroot -solid "#2F343F"
exec_always --no-startup-id xcompmgr
exec_always --no-startup-id "synclient TapButton1=1 TapButton2=3 TapButton3=2 VertTwoFingerScroll=1 HorizTwoFingerScroll=1"

exec_always --no-startup-id conky
exec_always --no-startup-id pulseaudio
exec_always --no-startup-id xxkb
exec_always --no-startup-id "sleep 10 && setxkbmap -layout \"us, ru\" -option \"grp:alt_shift_toggle\""
exec_always --no-startup-id xfce4-power-manager
exec_always --no-startup-id "sleep 8 && pa-applet"
exec_always --no-startup-id "sleep 8 && nm-applet"
exec_always --no-startup-id "sleep 8 && pamac-tray"

bar {
  status_command i3blocks
  position top
  tray_padding 2 px
  
  font pango: Awesome, DejaVu Sans Mono 14

  colors {
    background $bar_background
    statusline $light_color
    separator  $mid_light_color

    #colorclass        #border                 #background             #text
    focused_workspace  $focused_workspace_brd  $focused_workspace_bck  $focused_workspace_txt
    active_workspace   $active_workspace_brd   $active_workspace_bck   $active_workspace_txt
    inactive_workspace $inactive_workspace_brd $inactive_workspace_bck $inactive_workspace_txt
    urgent_workspace   $urgent_workspace_brd   $urgent_workspace_bck   $urgent_workspace_txt
    binding_mode       $binding_mode_brd       $binding_mode_bck       $binding_mode_txt
  }
}

